<% provide(:title, "登陆") %>
<h1>登陆</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path, class: "form-signin") do |f| %>
        <%= f.email_field :email ,:id=>"inputEmail", :class=>"form-control", :placeholder=>"Email" %>
        <%= f.password_field :password,:id=>"inputPassword", :class=>"form-control mg_tp", :placeholder=>"密码" %>
        <%= f.label :remember_me, class: "checkbox mg_tp" do %>
            <%= f.check_box :remember_me %>
            <span>记住我</span>
        <% end %>
        <%= f.submit "登陆", class: "btn btn-lg btn-primary btn-block" %>
    <% end %>
    <p>还没有账户? <%= link_to "现在注册", new_user_path %></p>
  </div>
</div>
