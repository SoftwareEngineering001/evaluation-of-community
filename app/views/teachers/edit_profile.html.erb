<% provide(:title, "编辑教师信息") %>
<div class="container">
  <div class="row float-element">
    <div class="bm-pd-lg">
      <h3 class="blue">编辑教师信息</h3>
      <hr>
      <!--<p><=link_to '查看编辑历史（共 {{ teacher.info_history_count }} 次）', profile_history_teacher_path%></p>-->
      <%=form_tag({action: :save_teacher_info}, class:"form-horizontal")%>
        <%=hidden_field_tag :teacher_id, @teacher.id%>
        <!--
        <div class="form-group">
          <label class="col-sm-2 control-label">上传照片</label>
          <div class="col-sm-5">
            <%= link_to image_tag("normal_icon.jpeg", :size => "60x60",:class => "img-thumbnail")%>
            <label class="btn btn-grey radius4 fileupload">
              <input type="file" name="avatar" onchange="$('#avatar-upload-btn').html('选择'); $('#avatar-upload-msg').show()"/>
              <span id="avatar-upload-btn">选择</span>
            </label>
            <button id="avatar-upload-msg" type="submit" class="btn btn-blue" style="display:none">上传</button>
          </div>
        </div>
      -->
        <div class="form-group">
          <label class="col-sm-2 control-label">教师姓名</label>
          <div class="col-sm-5">
            <input type="text" class="form-control" value=<%=@teacher.name%> disabled>
          </div>
        </div>


        <div class="form-group">
          <label class="col-sm-2 control-label">教师主页</label>
          <div class="col-sm-5">
            <input type="text" class="form-control" name="homepage" <% if @teacher.homepage %>value="<%=@teacher.homepage%>"<% else %>placeholder="教师介绍网页"<% end %>>
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-2 control-label">教师研究方向</label>
          <div class="col-sm-5">
            <input type="text" class="form-control" name="research" <% if @teacher.research %>value="<%= @teacher.research %>"<% end %>>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-2">
            <button type="submit" class="btn btn-blue btn-block">提交</button>
          </div>
        </div>
      </form>
      
    </div>
  </div> <!-- end float-element -->
</div> <!-- end container -->