<li id="comment-<%= comment.id %>">
  <%= link_to image_tag("normal_icon.jpeg", :size => "60x60",:class => "img-thumbnail")%>
  <span class="user"><%= link_to comment.user.name, comment.user %> 点评了 
                     <%= link_to "#{comment.course.title}(#{comment.course.teacher})", comment.course %>  </span>
  <span class="content"><%= comment.content %></span>
  <span class="timestamp">发表于 <%= comment.created_at %>  </span>
  <% if !@disable_delete && ((current_user && current_user.admin?) || (current_user?(comment.user))) %>
    | <%= link_to "删除", comment_path(comment,:page=>@curpage), method: :delete, data: { confirm: "确定删除吗?" } %>
  <% end %>
</li>