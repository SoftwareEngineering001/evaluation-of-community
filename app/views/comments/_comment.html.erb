<li class="ud-pd-md dashed comment" id="comment-<%= comment.id %>">
  <!--<div class="ud-pd-md dashed comment">-->
  <div class="blue ud-pd-sm">
    <%= link_to image_tag("normal_icon.jpeg", :size => "60x60",:class => "img-thumbnail")%>
    <span class="right-pd-sm px16 user">
      <%= link_to comment.user.name, comment.user %> 点评了
      <%= link_to "#{comment.course.title}(#{comment.course.teacher})", comment.course%>
    </span>
    
    <% for star in 0..4 %>
      <% if comment.rate >= 1.5 + star * 2 %>
      <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
      <% elsif comment.rate >= 0.5 + star * 2 %>
      <span class="glyphicon glyphicon-star-half" aria-hidden="true"></span>
      <% else %>
      <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
      <% end %>
    <% end %>
    
    <span class="left-pd-md"><%=comment.term%> </span>
  </div>
    
  <div>
    <!--<span class="content">-->
    <%= comment.content %>
    <!--</span>-->
  </div>
  <div class="bm-pd-md grey" id="comment-attitudes-<%=comment.id%>">
    <span class="small"><%=comment.created_at %></span>
    <span id= "approve-form-<%=comment.id%>"><%= render partial: "comments/approve_form", locals: { comment: comment } %></span>
    
    <span id="comment-upvote-count-<%= comment.id %>"><%=comment.attitude_to_comments.count%></span>
    <a class="nounderline" href="javascript: show_review_comments({{ review.id }})">
      <span class="glyphicon glyphicon-comment grey left-pd-md" aria-hidden="true"></span>
      <span id="comment-comment-count-<%= comment.id%>"><%=comment.comment_count%></span>
    </a>
    <span class="pull-right">
      <% if current_user?(comment.user) %>
        <%= link_to new_comment_path(:course_id=>@course.id,:user_id=>current_user.id) do%>
          <span class="glyphicon glyphicon-pencil grey left-pd-sm small" aria-hidden="true" ></span>
          编辑
        <%end%>
      <%end%>
      <%if current_user != nil%>
        <% if !@disable_delete && ((current_user && current_user.admin?) || (current_user?(comment.user))) %>
          <%= link_to comment_path(comment, :page=>@curpage), method: :delete, data: {confirm: "确定删除吗?"} do %>
            <span class="glyphicon glyphicon-comment"></span>删除
          <% end %>
        <% end %>
      <%end%>
      
      <% if current_user != nil and current_user.admin? %>
      <span class="glyphicon glyphicon-ban-circle grey left-pd-md" aria-hidden="true"></span>
        <!--< if review.is_hidden %>-->
        <!--<a href="javascript: unhide_review({{review.id}});">解除屏蔽</a>-->
        <!--< else %>-->
        <!--<a href="javascript: hide_review({{review.id}});">屏蔽</a>-->
        <!--< end %>-->
      <% end %>
    </span>
  </div>
  <!--</div>-->
</li>